{
    "bundle":{
        "containers":[
            {
                "location":"../../openidm/bundle",
                "includes":[
                    "**/openidm-security-jetty*.jar",
                    "**/openidm-jaas-loginmodule-repo*.jar",
                    "**/openidm-jetty-fragment*.jar",
                    "**/openidm-quartz-fragment*.jar"
                ],
                "start-level":1,
                "action":"install"
            },
            {
                "location":"../../openidm/bundle",
                "includes":[
                    "**/openidm-config*.jar",
                    "**/openidm-crypto*.jar"
                ],
                "start-level":1,
                "action":"install.start"
            },
            {
                "location":"../../openidm/bundle",
                "includes":[
                    "**/openidm-repo-jdbc*.jar",
                    "**/openidm-repo-orientdb*.jar",
                    "**/org.apache.felix.scr-*.jar"
                ],
                "start-level":2,
                "action":"install.start"
            },
            {
                "location":"../../openidm/bundle",
                "includes":[
                    "**/org.apache.felix.configadmin*.jar",
                    "**/org.apache.felix.fileinstall*.jar"
                ],
                "start-level":3,
                "action":"install.start"
            },
            {
                "location":"../../openidm/bundle",
                "includes":[
                    "**/openidm-httpcontext-*.jar"
                ],
                "start-level":9,
                "action":"install.start"
            },
            {
                "location":"../../openidm/bundle",
                "includes":["*.jar"],
                "excludes":[
                    "**/org.forgerock.json.resource-*.jar",
                    "**/json-fluent-*.jar",
                    "**/org.forgerock.util-*.jar",
                    "**/org.apache.felix.scr-*.jar",
                    "**/openidm-httpcontext-*.jar"
                ]
            },
            {
                "location":"../../openidm/bundle",
                "includes":[
                    "**/pax-web-jetty-bundle*.jar"
                ],
                "start-level":11,
                "action":"install.start"
            },
            {
                "location":"../../openidm/bundle",
                "includes":[
                    "**/pax-web-extender-whiteboard*.jar",
                    "**/openidm-scheduler*.jar"
                ],
                "start-level":12,
                "action":"install.start"
            }
        ],
        "default":{
            "start-level":10,
            "action":"install.start"
        }
    },
    "config.properties":"&{root}/conf/config.properties",
    "system.properties":"&{root}/conf/system.properties"
}