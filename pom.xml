        <!-- OSGi bundles properties -->
        <!--openidm.osgi.import.openidm.version>version="[$(version;==;${openidm.osgi.version.clean}),$(version;=+;${openidm.osgi.version.clean}))"</openidm.osgi.import.openidm.version-->
