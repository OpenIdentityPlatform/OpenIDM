<?xml version="1.0" encoding="UTF-8"?>

<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <baseDirectory>/</baseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${basedir}/target/minified</directory>
            <outputDirectory>/openidm-ui-ria</outputDirectory>
            <includes>
        		<include>data/**</include>
        		<include>templates/**</include>
        		<include>images/**</include>
        		<include>*.html</include>
        		<include>js/main.js</include>
      		</includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/classes</directory>
            <outputDirectory>/openidm-ui-ria</outputDirectory>
            <includes>
        		<include>js/config/**</include>
        		<include>js/libs/**</include>
      		</includes>
        </fileSet>
        
        <fileSet>
            <directory>${basedir}/target/minified</directory>
            <outputDirectory>/openidm-ui-ria-apache</outputDirectory>
            <includes>
        		<include>data/**</include>
        		<include>templates/**</include>
        		<include>images/**</include>
        		<include>*.html</include>
        		<include>js/main.js</include>
      		</includes>
      		<excludes>
      			<exclude>js/config/**</exclude>
      			<exclude>js/libs/**</exclude>
      		</excludes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/customized/apache</directory>
            <outputDirectory>/openidm-ui-ria-apache</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/classes</directory>
            <outputDirectory>/openidm-ui-ria-apache</outputDirectory>
            <includes>
        		<include>js/config/**</include>
        		<include>js/libs/**</include>
      		</includes>
        </fileSet>
        
        <!-- overwrite optimized external libraries with removed license headers -->
        <fileSet>
            <directory>${basedir}/src/main/resources/js</directory>
            <outputDirectory>/openidm-ui-ria-apache/js</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/js</directory>
            <outputDirectory>/openidm-ui-ria/js</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/css</directory>
            <outputDirectory>/openidm-ui-ria-apache/css</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/css</directory>
            <outputDirectory>/openidm-ui-ria/css</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
