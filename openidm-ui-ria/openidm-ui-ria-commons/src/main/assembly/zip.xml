<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>www</id>
	<baseDirectory>/</baseDirectory>
	<formats>
		<format>dir</format>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>requirejs:requirejs</include>
			</includes>
			<outputDirectory>/libs</outputDirectory>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>backbone:backbone</include>
			</includes>
			<outputDirectory>/libs</outputDirectory>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>jquery:jquery</include>
			</includes>
			<outputDirectory>/libs</outputDirectory>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>underscore:underscore</include>
			</includes>
			<outputDirectory>/libs</outputDirectory>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>spin:spin</include>
			</includes>
			<outputDirectory>/libs</outputDirectory>
		</dependencySet>
		<dependencySet>
            <includes>
                <include>dataTables:dataTables</include>
            </includes>
            <outputDirectory>/libs</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>xdate:xdate</include>
            </includes>
            <outputDirectory>/libs</outputDirectory>
        </dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>${basedir}/target/classes</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
