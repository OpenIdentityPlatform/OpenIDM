{
    "enabled" : "false",
    "jndiName" : "",
    "dbDriver" : "com.mysql.jdbc.Driver",
    "dbUrl" : "jdbc:mysql://localhost:3306/openidm",
    "user" : "root",
    "password" : "",
    "queries" : {
        "genericTables" : {
            "query-all-ids" : "SELECT openidmid from ${_mainTable} WHERE type = ${_resource}",
            "links-for-sourceId" : "SELECT fullobject from ${_mainTable}, ${_propTable} WHERE type = ${_mainTable}_type AND openidmid = ${_mainTable}_openidmid AND propkey='$.sourceId' AND propvalue = ${sourceId}",
            "links-for-targetId" : "SELECT fullobject from ${_mainTable}, ${_propTable} WHERE type = ${_mainTable}_type AND openidmid = ${_mainTable}_openidmid AND propkey='$.targetId' AND propvalue = ${targetId}"
        }
    },
    "resourceMapping" : {
        "default" : {
            "mainTable" : "genericobjects", 
            "propertiesTable" : "genericobjectproperties"
        },
        "genericMapping" : {
            "managed/*" : {
                "mainTable" : "managedobjects", 
                "propertiesTable" : "managedobjectproperties"
            }
        },
        "explicitMapping" : {
            "link/*" : {
                "table" : "links",
                "objToColumn" : {
                    "_type" : "type",
                    "_id" : "openidmid",
                    "sourceId" : "sourceid",
                    "targetId" : "targetid",
                    "reconId" : "reconid"
                }
            },
            "audit/activity" : {
                "table" : "auditactivity",
                "objectToColumn" : {
                    "_id" : "openidmid",
                    "timestamp" : ["timestamp", "DATE"],
                    "action" : "action",  
                    "message" : "message", 
                    "objectId" : "objectid",
                    "rev" : "rev", 
                    "rootActionId" : "rootactionid", 
                    "parentActionId" : "parentactionid", 
                    "requester" : "requester", 
                    "approver" : "approver",
                    "before" : "before",
                    "after" : "after",
                    "status" : "status"
                }
            }
        }
    }
}
