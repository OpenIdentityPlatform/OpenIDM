    <scriptTask id="scripttask4" name="Assign Application" scriptFormat="groovy">
      <script><![CDATA[

def application = binding.variables.lnkId
def alreadyAssigned = false
def userId = binding.variables._requestor;

def amUser = openidm.read("system/ldap/account/uid=" + userId + ",ou=People,dc=openam,dc=forgerock,dc=org");

for (app in amUser.assignedDashboard) {
    if (app.toLowerCase() == application.toLowerCase()) {
    	out:println(userId + " already has " + app)
    	alreadyAssigned = true
    }
}

if (!alreadyAssigned) {
	amUser.assignedDashboard.push(application)
	openidm.update("system/ldap/account/uid=" + userId + ",ou=People,dc=openam,dc=forgerock,dc=org", '', amUser)
}

]]></script>
