{
    "enabled" : true,
    "type" : "cron",
    "schedule" : "0 0 * * * ?",
    "invokeService" : "taskscanner",
    "invokeContext" : {
        "scan" : {
            "_query-id" : "scan-tasks",
            "object" : "managed/user",
            "property" : "/sunset/date",

            "condition" : {
                "before": "${Time.now}"
            },
            "taskState" : {
                "started" : "/sunset/task-started",
                "completed" : "/sunset/task-completed"
            },
            "recovery" : {
                "timeout" : "10m"
            }
        },
        "task" : {
            "script" : {
                "type" : "text/javascript",
                "file" : "script/sunset.js"
            }
        }
    }
}
