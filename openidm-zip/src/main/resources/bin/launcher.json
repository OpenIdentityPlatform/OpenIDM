{
    "bundle":{
        "containers":[
            {
                "location":"bundle",
                "includes":[
                    "**/openidm-system-*.jar"
                ],
                "start-level":1,
                "action":"install.start"
            },
            {
                "location":"bundle",
                "includes":[
                    "**/org.apache.servicemix.transaction-*.jar",
                    "**/openidm-security-jetty*.jar",
                    "**/openidm-jetty-fragment*.jar",
                    "**/openidm-quartz-fragment*.jar",
                    "**/groovy-all*.jar"
                ],
                "start-level":2,
                "action":"install.start"
            },
            {
                "location":"bundle",
                "includes":["*.jar"],
                "excludes":[
                    "**/openidm-system-*.jar",
                    "**/javax.transaction-*.jar",
                    "**/org.apache.servicemix.transaction-*.jar",
                    "**/openidm-security-jetty*.jar",
                    "**/openidm-jetty-fragment*.jar",
                    "**/openidm-quartz-fragment*.jar",
                    "**/groovy-all*.jar",
                    "**/openidm-scheduler*.jar",
                    "**/org.apache.felix.scr*.jar"
                ]
            },
            {
                "location":"bundle",
                "includes":[
                    "**/openidm-scheduler*.jar",
                    "**/org.apache.felix.scr*.jar"
                ],
                "start-level":11,
                "action":"install.start"
            }
        ],
        "default":{
            "start-level":10,
            "action":"install.start"
        }
    },
    "config.properties":"conf/config.properties",
    "system.properties":"conf/system.properties",
    "boot.properties":{
        "openidm.workflow.enabled":true
    }
}
