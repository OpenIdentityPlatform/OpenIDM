                },
                {
                    "name" : "givenName",
                    "policies" : [
                        {
                            "policyId" : "required"
                        },
                        {
                            "policyId" : "not-empty"
                        },
                        {
                            "policyId" : "valid-name-format"
                        }
                    ]
                },
                {
                    "name" : "familyName",
                    "policies" : [
                        {
                            "policyId" : "required"
