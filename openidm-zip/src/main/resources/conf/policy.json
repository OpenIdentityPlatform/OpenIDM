{
    "type" : "text/javascript",
    "file" : "script/policy.js",
    "resources" : [
        {
            "resource" : "managed/user/*",
            "properties" : [
                {
                    "name" : "userName",
                    "policies" : [
                        {
                            "policyId" : "required"
                        },
                        {
                            "policyId" : "not-empty"
                        },
                        {
                            "policyId" : "unique"
                        }
                    ]
                },
                {
                    "name" : "password",
                    "policies" : [
                        {
                            "policyId" : "required"
                        },
                        {
                            "policyId" : "not-empty"
                        },
                        {
                            "policyId" : "at-least-X-capitals",
