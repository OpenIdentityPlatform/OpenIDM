{
    "server-auth-config" : {
        "idm-auth" : {
            "session-module" : {
                "class-name" : "org.forgerock.jaspi.modules.iwa.JwtSessionModule",
                "key-alias" : "openidm-localhost",
                "private-key-password" : "changeit",
                "keystore-type" : "JCEKS",
                "keystore-file" : "security/keystore.jceks",
                "keystore-password" : "changeit",
                "token-life" : "10",
                "userid-key": "X-OpenIDM-Username"
            },
            "auth-modules" : [
                {
                    "class-name" : "org.forgerock.openidm.jaspi.modules.IDMAuthModule",
                    "queryId" : "credential-query",
                    "queryOnResource" : "managed/user",
                    "propertyMapping" : {
                        "userId" : "_id",
                        "userCredential" : "password",
                        "userRoles" : "memberOf"
                    },
                    "defaultUserRoles" : [ ]
                }
            ]
        }
    }
}
